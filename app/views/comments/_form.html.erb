<!-- app/views/comments/_form.html.erb -->

<%= form_with(model: [post, post.comments.build], url: post_comments_path(post), local: true) do |form| %>
  <div class="field">
    <%= form.text_area :content, placeholder: 'Add a comment...' %>
  </div>
  <div class="actions">
    <%= form.submit 'Post' %>
  </div>
<% end %>