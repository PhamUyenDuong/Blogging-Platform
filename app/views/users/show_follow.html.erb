<!-- app/views/users/show_follow.html.erb -->
<h1><%= @title %></h1>

<% if @users.any? %>
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= link_to user.email, user %>
        <!-- Add any additional user information you want to display here -->
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No users to display.</p>
<% end %>
<%= link_to 'Back', 'javascript:history.back()' %>